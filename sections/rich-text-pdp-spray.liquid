<div class="section__wrapper">
  <header class="section__header">
    <h2 class="h2">{{ section.settings.title }}</h2>
    <span class="section__logo">{%- include 'icon-logo' -%}</span>
  </header>
  <div class="section__inner">
    <div class="section__left">
      <div class="h3">{{ section.settings.text1 }}</div>
      <div class="section__awards">
        <img class="lazyload" data-src="{{ 'icons-award-1.png' | file_url }}">
        <img class="lazyload" data-src="{{ 'icons-award-2.png' | file_url }}">
        <img class="lazyload" data-src="{{ 'icons-award-3.png' | file_url }}">
        <img class="lazyload" data-src="{{ 'icons-award-4.png' | file_url }}">
      </div>
      {% comment %}
      {%- if section.settings.image != blank -%}
        <img class="section__image lazyload" data-src="{{ section.settings.image | img_url: '800x' }}">
      {%- endif -%}
      {% endcomment %}
    </div>
    <div class="section__right">
      <div class="h3">{{ section.settings.text2 }}</div>
      <div class="">{{ section.settings.text3 }}</div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Text with image",
  "class": "text-image-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Talk about your brand"
    },
    {
      "type": "textarea",
      "id": "text1",
      "label": "Text",
      "default": "Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store."
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Text 2"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "text3",
      "label": "Text 3"
    }
  ]
}
{% endschema %}
