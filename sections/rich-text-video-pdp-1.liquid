<div class="section__wrapper">
  <header class="section__header">
    <h2 class="h2">{{ section.settings.section_title }}</h2>
  </header>
  <div class="section__body">
    {% if section.settings.video != blank %}
    <div class="video">
      <div class="video__play">
        <div class="video__button">
          {%- include 'icon-play' -%}
        </div>
      </div>
      <video src="{{ section.settings.video }}" title="Seven Sundays Matratze Produktvideo"></video>
    </div>
    {% endif %}
    <p class="h3">{{ section.settings.text1 }}</p>
    <p class="">{{ section.settings.text2 }}</p>
    {%- if section.settings.image != blank -%}
      <img class="section__media lazyload" data-src="{{ section.settings.image | img_url: '800x' }}">
    {%- endif -%}
  </div>
  <div class="section__blocks">
    {%- for block in section.blocks -%}
      <div class="section__block">
        <img class="section__block__image lazyload" data-src="{{ block.settings.image | img_url: '500x' }}">
        <div class="section__block__text">
          <div class="h3">{{ block.settings.title }}</div>
          <div class="section__block__content">{{ block.settings.content }}</div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Rich text with video",
  "class": "rich-text-video-section section section--divider",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Heading",
      "default": "Talk about your brand"
    },
    {
      "type": "textarea",
      "id": "text1",
      "label": "Text 1"
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Text 2"
    },
    {
      "type": "text",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ]
}
{% endschema %}
