<div class="page-container">
  <div class="benefits">
    <div class="benefits-icons">
      <h2 class="h2">{{ section.settings.title }}</h2>
      <div class="benefits-icons__inner">
        <div class="benefits-icon">
          {%- if section.settings.svg1 != blank -%}
            <img class="lazyload" data-src="{{ section.settings.svg1 | asset_url }}">
          {%- else -%}
            <img class="lazyload" data-src="{{ section.settings.image1 | img_url: '200x' }}">
          {%- endif -%}
          <span class="h4">{{ section.settings.text1 }}</span>
        </div>
        <div class="benefits-icon">
          {%- if section.settings.svg2 != blank -%}
            <img class="lazyload" data-src="{{ section.settings.svg2 | asset_url }}">
          {%- else -%}
            <img class="lazyload" data-src="{{ section.settings.image2 | img_url: '200x' }}">
          {%- endif -%}
          <span class="h4">{{ section.settings.text2 }}</span>
        </div>
        <div class="benefits-icon">
          {%- if section.settings.svg3 != blank -%}
            <img class="lazyload" data-src="{{ section.settings.svg3 | asset_url }}">
          {%- else -%}
            <img class="lazyload" data-src="{{ section.settings.image3 | img_url: '200x' }}">
          {%- endif -%}
          <span class="h4">{{ section.settings.text3 }}</span>
        </div>
      </div>
    </div>
    <div class="benefits-text">
      <span class="h7">{{ section.settings.subheading }}</span>
      <span class="h3">{{ section.settings.heading }}</span>
      {{ section.settings.content }}
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Benefits",
  "class": "index-section benefits-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "svg1",
      "label": "SVG 1"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "svg2",
      "label": "SVG 2"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Text 2"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image 3"
    },
    {
      "type": "text",
      "id": "svg3",
      "label": "SVG 3"
    },
    {
      "type": "text",
      "id": "text3",
      "label": "Text 3"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    }
  ],
  "presets": [
    {
      "name": "Benefits",
      "category": "Text"
    }
  ]
}
{% endschema %}
