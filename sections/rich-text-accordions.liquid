<div class="section__wrapper {% if section.settings.anchor != blank %} section-check{% endif %}" name="{% if section.settings.anchor != blank %}{{ section.settings.anchor }}{% endif %}" id="{% if section.settings.anchor != blank %}{{ section.settings.anchor_id }}{% endif %}">
  <header class="section__header">
    <h2 class="h2">{{ section.settings.section_title }}</h2>
  </header>
  <div class="section__body">
    <p class="h3">{{ section.settings.text1 }}</p>
    <p class="">{{ section.settings.text2 }}</p>
    <div class="accordion">
      {%- for block in section.blocks -%}
        <div class="accordion__item">
          <button class="accordion__toggle" aria-expanded="false" data-accordion="" data-nested-control="{{ block.settings.title }}">
            <img class="accordion__icon" src="{{ block.settings.svg | asset_url }}" alt="">
            <span class="h3">{{ block.settings.title }}</span>
            <span class="accordion__toggle__icon"></span>
          </button>
          <div class="accordion__content" data-nested-content="{{ block.settings.title }}" style="max-height: 0px; overflow: hidden;">
            <div>
              <p>{{ block.settings.content }}</p>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Rich text with accordions",
  "class": "index-section rich-text-accordion-section section",
  "settings": [
    {
      "type": "text",
      "id": "anchor",
      "label": "Anchor"
    },
    {
      "type": "text",
      "id": "anchor_id",
      "label": "Anchor ID"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Heading",
      "default": "Talk about your brand"
    },
    {
      "type": "textarea",
      "id": "text1",
      "label": "Text 1"
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Text 2"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "svg",
          "label": "SVG"
        }
      ]
    }
  ]
}
{% endschema %}
