<div class="section__wrapper">
  <header class="section__header">
    <h2 class="h2">{{ section.settings.title }}</h2>
  </header>
  <div class="section__body">
    <p class="h3">{{ section.settings.text1 }}</p>
    <p class="">{{ section.settings.text2 }}</p>
    <p class="h3">{{ section.settings.text3 }}</p>
    <div class="section__selector">
      <select>
        {%- for block in section.blocks -%}
          <option value="{{ block.settings.image | img_url: '800x' }}">{{ block.settings.title }}</option>
        {%- endfor -%}
      </select>
      <img class="lazyload" data-src="{{ section.blocks[0].settings.image | img_url: '800x' }}">
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Rich text with selector",
  "class": "index-section rich-text-selector-section section--divider section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Talk about your brand"
    },
    {
      "type": "textarea",
      "id": "text1",
      "label": "Text 1"
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Text 2"
    },
    {
      "type": "textarea",
      "id": "text3",
      "label": "Text 3"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}
