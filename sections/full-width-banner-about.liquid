<div class="full-width-banner">
  <img class="lazyload" data-src="{{ section.settings.image | img_url: 'master' }}">
  <div class="section__wrapper">
    <div class="section__body">
      <div class="h1">{{ section.settings.title }}</div>
      <div class="h3">{{ section.settings.text1 }}</div>
      <div>{{ section.settings.text2 }}</div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Full width banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "text1",
      "label": "Text 1"
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Text 2"
    }
  ]
}
{% endschema %}
