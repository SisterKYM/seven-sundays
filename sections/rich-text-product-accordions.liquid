<div class="section__wrapper {% if section.settings.anchor != blank %} section-check{% endif %}" name="{% if section.settings.anchor != blank %}{{ section.settings.anchor }}{% endif %}" id="{% if section.settings.anchor != blank %}{{ section.settings.anchor_id }}{% endif %}">
  <header class="section__header">
    <h2 class="h2">{{ section.settings.section_title }}</h2>
  </header>
  <div class="section__body">
    <p class="h3">{{ section.settings.text1 }}</p>
    <p class="">{{ section.settings.text2 }}</p>
  </div>
  <div class="productAccordion">
    {%- for block in section.blocks -%}
      <div class="productAccordion__item">
        <button class="productAccordion__toggle" aria-expanded="false" data-accordion="" data-nested-control="{{ block.settings.title }}">
          <span class="h3">{{ block.settings.title }}</span>
          <img class="productAccordion__media lazyload" data-src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}" title="{{ block.settings.title }}">
          <span class="productAccordion__icon"></span>
        </button>
        <div class="productAccordion__content" data-nested-content="{{ block.settings.title }}">
          <div>
              {{ block.settings.content }}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
  <div class="section__body">    
    <p class="h3">{{ section.settings.text3 }}</p>
    <p class="">{{ section.settings.text4 }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Rich text with products",
  "class": "index-section rich-text-accordion-section section section--divider",
  "settings": [
    {
      "type": "text",
      "id": "anchor",
      "label": "Anchor"
    },
    {
      "type": "text",
      "id": "anchor_id",
      "label": "Anchor ID"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Heading",
      "default": "Talk about your brand"
    },
    {
      "type": "textarea",
      "id": "text1",
      "label": "Text 1"
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Text 2"
    },
    {
      "type": "textarea",
      "id": "text3",
      "label": "Text 3"
    },
    {
      "type": "textarea",
      "id": "text4",
      "label": "Text 4"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rich text with product accordions",
      "category": "Text"
    }
  ]
}
{% endschema %}
