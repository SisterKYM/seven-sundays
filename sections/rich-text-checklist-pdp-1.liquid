<div class="section__wrapper">
  <header class="section__header">
    <h2 class="h2">{{ section.settings.section_title }}</h2>
  </header>
  <div class="section__body">
    {%- if section.settings.text1 != blank -%}
      <div class="h3">{{ section.settings.text1 }}</div>
    {%- endif -%}

    {%- if section.settings.text2 != blank -%}
      <div>{{ section.settings.text2 }}</div>
    {%- endif -%}

    {%- if section.settings.image != blank -%}
      <img class="section__media lazyload" data-src="{{ section.settings.image | img_url: '800x' }}">
    {%- endif -%}

    {%- if section.settings.text3 != blank -%}
      <div class="h3">{{ section.settings.text3 }}</div>
    {%- endif -%}

    {%- if section.settings.text4 != blank -%}
      <div>{{ section.settings.text4 }}</div>
    {%- endif -%}

    {%- if section.settings.btn_label != blank -%}
    <a href="{{ section.settings.btn_url }}" class="button button--red">{{ section.settings.btn_label }}</a>
    {%- endif -%}

    <div class="accordion">
      {%- for block in section.blocks -%}
        <div class="accordion__item">
          <button class="accordion__toggle" aria-expanded="false" data-accordion="" data-nested-control="{{ block.settings.title }}">
            <img class="accordion__icon lazyload" data-src="{{ 'icon-checkbox.svg' | asset_url }}" alt="Checkbox Icon" title="Checkbox Icon">
            <span class="h3">{{ block.settings.title }}</span> <span class="accordion__toggle__icon"></span> 
          </button>
          <div class="accordion__content" data-nested-content="{{ block.settings.title }}" style="overflow: hidden; max-height: 0px;">
            <div>
              {{ block.settings.content }}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Rich text with checklist",
  "class": "index-section rich-text-checklist-section section section--divider",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Heading",
      "default": "Talk about your brand"
    },
    {
      "type": "richtext",
      "id": "text1",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "richtext",
      "id": "text2",
      "label": "Text 2"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "richtext",
      "id": "text3",
      "label": "Text 3"
    },
    {
      "type": "richtext",
      "id": "text4",
      "label": "Text 4"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Label"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ]
}
{% endschema %}
