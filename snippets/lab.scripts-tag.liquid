
{% comment %}
  shoplab
  Include assets based on page_type
{% endcomment %}

<script src="{{ 'lab.theme.js' | asset_url }}" defer="defer"></script>

{%- case request.page_type -%}
  {%- when "index" -%}
    <script src="{{ 'lab.index.js' | asset_url }}" defer="defer"></script>
  
  {%- when "collection" -%}
    <script src="{{ 'lab.collection.js' | asset_url }}" defer="defer"></script>

  {%- when "product" -%}
    <script src="{{ 'lab.product.js' | asset_url }}" defer="defer"></script>

  {%- when "cart" -%}
    <script src="{{ 'lab.cart.js' | asset_url }}" defer="defer"></script>

  {%- when "page" -%}
    <script src="{{ 'lab.page.js' | asset_url }}" defer="defer"></script>
{%- endcase -%}
